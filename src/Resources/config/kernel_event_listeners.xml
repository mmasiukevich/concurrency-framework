<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!--Event dispatcher -->
        <service id="service_bus.event_dispatcher"
                 class="Symfony\Component\EventDispatcher\EventDispatcher"
                 public="false"/>

        <!-- Listener event for message completion -->
        <service id="service_bus.kernel_event_listeners.after_message_execution"
                 class="Desperado\ServiceBus\Application\Kernel\EventListeners\AfterMessageExecutionListener"
                 public="false">
            <argument type="service" id="service_bus.sagas.provider"/>

            <tag name="service_bus.event_listener"
                 event="service_bus.kernel_events.after_execution"
                 method="onComplete"/>

        </service>

        <!-- Listener event for message completion -->
        <service id="service_bus.kernel_event_listeners.message_bus_configured"
                 class="Desperado\ServiceBus\Application\Kernel\EventListeners\MessageBusCompiledListener"
                 public="false">
            <argument type="service" id="service_bus.logger"/>

            <tag name="service_bus.logger" channel="bootstrap"/>

            <tag name="service_bus.event_listener"
                 event="service_bus.kernel_events.message_bus_compiled"
                 method="onCompiled"/>
        </service>
    </services>
</container>
