<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Symfony Serializer bridge -->
        <service id="service_bus.infrastructure.serializer_bridge"
                 class="Desperado\MessageSerializer\Bridge\SymfonySerializerBridge"
                 public="false"/>

        <!-- Annotations reader bridge -->
        <service id="service_bus.infrastructure.annotations_reader"
                 class="Desperado\Infrastructure\Bridge\AnnotationsReader\DoctrineAnnotationsReader"
                 public="false"/>
    </services>
</container>
